{
	"name": "LogicTest",
	"properties": {
		"activities": [
			{
				"name": "Set Fecha Actual",
				"type": "SetVariable",
				"dependsOn": [],
				"policy": {
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"variableName": "flag",
					"value": {
						"value": "@concat(formatDateTime(utcnow(),'yyyyMMdd'),'.flag')",
						"type": "Expression"
					}
				}
			},
			{
				"name": "Obtener Metadata",
				"type": "GetMetadata",
				"dependsOn": [
					{
						"activity": "Set Fecha Actual",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"dataset": {
						"referenceName": "BinaryMetadata",
						"type": "DatasetReference",
						"parameters": {
							"Container": {
								"value": "@pipeline().parameters.Container",
								"type": "Expression"
							}
						}
					},
					"fieldList": [
						"childItems"
					],
					"storeSettings": {
						"type": "AzureBlobStorageReadSettings",
						"enablePartitionDiscovery": false
					},
					"formatSettings": {
						"type": "BinaryReadSettings"
					}
				}
			}
		],
		"parameters": {
			"Container": {
				"type": "string"
			}
		},
		"variables": {
			"flag": {
				"type": "String"
			}
		},
		"annotations": []
	}
}